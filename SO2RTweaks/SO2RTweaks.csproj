<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <PlatformTarget>x64</PlatformTarget>
    <DebugType>embedded</DebugType>
    <LangVersion>10</LangVersion> <!-- BepInEx uses net6.0 runtime -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.bepinex.dev/v3/index.json;
      https://nuget.samboy.dev/v3/index.json
    </RestoreAdditionalProjectSources>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>SO2RTweaks</RootNamespace>
    <Version>0.0.1</Version>
    <AssemblyTitle>A BepInEx plugin for Star Ocean: The Second Story R.</AssemblyTitle>
    <Company>I love Mahou Shoujo Lyrical Nanoha</Company>
    <Copyright>Brasileiro</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.*" IncludeAssets="compile" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>..\libs\BepInEx\interop\Assembly-CSharp.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="Il2Cppmscorlib">
      <HintPath>..\libs\BepInEx\interop\Il2Cppmscorlib.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="UnityEngine.CoreModule">
        <HintPath>..\libs\BepInEx\interop\UnityEngine.CoreModule.dll</HintPath>
        <Private>false</Private>
    </Reference>
  </ItemGroup>
</Project>
